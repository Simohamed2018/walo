package com.simo.controller;


import com.simo.model.Product;
import com.simo.proxy.MicroserviceProduitsProxy;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;
import java.util.List;


@RestController
public class ClientController {

    @Autowired
    private MicroserviceProduitsProxy ProduitsProxy;

   
   
    @RequestMapping("/produits")
    public List<Product> accueil(){

       List<Product> produits =  ProduitsProxy.listeDesProduits();
	return produits;       
    }   
   
    
    @RequestMapping("/produits/{id}")
    public Product ficheProduit(@PathVariable int id){

     Product produit = ProduitsProxy.recupererUnProduit(id);
	return produit;
        
    }

        
}
