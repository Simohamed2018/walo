package com.mproduits.service;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.mproduits.dao.CompteDao;
import com.mproduits.model.Compte;
@Service
public class ProductServiceImp  implements  CompteService{

    @Autowired
    CompteDao compteDao;

    // Affiche la liste de tous les produits disponibles
    public List<Compte> listeDesProduits() {

        List<Compte> Comptes = compteDao.findAll();
        return Comptes;

    }

    // RÃ©cuperer un produit par son id

    public Compte recupererUnProduit(int id) {

        Compte Compte = CompteDao.findById(id);
     return Compte;
    }

    // Ajouter un produit

    public Compte ajouterUnProduit( Compte produit) {


        return CompteDao.save(produit);
    }


    public void updateProduit( Compte Compte) {

        CompteDao.save(Compte);
    }


    public void supprimerProduit(int id) {

        CompteDao.deleteById(id);
    }    


    
    // ajouter un produit

    public Compte ajouterProduit(Compte Compte) {

        Compte CompteAdded = CompteDao.save(Compte);

        return CompteAdded;
    }


    public List<Compte> calculerMargeProduit(){
        List<Compte> Comptes = CompteDao.findAll();

        return Comptes;

    }
}


